desc "Run tests"
task :test do
  puts "Testing test example..."
  ruby "test/spec.rb"
  puts
  puts "Testing suite example..."
  ruby "suite/spec1.rb"
  puts
  ruby "suite/spec2.rb"
end

desc "Run tests"
task :spec do
  puts "Testing test example..."
  ruby "test/spec.rb"
  puts
  puts "Testing suite example..."
  ruby "suite/spec1.rb"
  puts
  ruby "suite/spec2.rb"
end
